<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="magedia_article_banner.subscriber.extend_article_list" class="MagediaArticleBanner\Subscriber\ArticleList">
            <argument>%magedia_article_banner.plugin_dir%</argument>
            <tag name="shopware.event_subscriber"/>
        </service>

        <service id="magedia_article_banner.service.article_banner_manager" class="MagediaArticleBanner\Services\ArticleBannerManager">
            <argument type="service" id="shopware_storefront.context_service"/>
            <argument type="service" id="legacy_struct_converter"/>
            <argument type="service" id="dbal_connection"/>
        </service>

        <service id="magedia_article_banner.subscriber.extend_article_detail" class="MagediaArticleBanner\Subscriber\ArticleDetail">
            <argument>%magedia_article_banner.plugin_dir%</argument>
            <argument type="service" id="template"/>
            <argument type="service" id="magedia_article_banner.service.article_banner_manager"/>
            <tag name="shopware.event_subscriber"/>
        </service>
    </services>
</container>
